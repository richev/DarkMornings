<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <title>Dark Mornings</title>
    <meta name="description" content="Ever wonder how much longer you'll be commuting in the dark?">
    <link rel="icon" type="image/png" href="/favicon.png">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-46839699-1']);
        _gaq.push(['_setDomainName', 'darkmornings.com']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dark Mornings", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="jumbotron overlay">
            
        </div>
        <div class="jumbotron content">
            <h1><a href="@Url.Action("Index", "Home")">Dark Mornings</a><i class="fa fa-sun-o"></i><i class="fa fa-moon-o"></i></h1>
            @RenderBody()
        </div>
        <footer>
            <p>Made by <a href="http://twitter.com/richev">Richard</a>, copyright &copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    
    <script type="text/javascript">
        var overlay;
        var content;

        var resizeOverlay = function () {
            overlay.width(content.width());
            overlay.height(content.height());
        };

        $(document).ready(function () {
            overlay = $(".jumbotron.overlay");
            content = $(".jumbotron.content");
            window.setTimeout(resizeOverlay, 100); // initial overlay resize to happen after page is fully presented. Saw issues otherwise.

            $(window).resize(resizeOverlay);

            // not working....yet
            /*var isTouchDevice = 'ontouchstart' in document.documentElement;
            if (!isTouchDevice) {
                // There are some CSS styles (:hover ones) that we only want on a non-touch device
                $("body").addClass("notTouchDevice");
            }*/
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
