<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <title>Dark Mornings</title>
    <meta name="description" content="Ever wonder how much longer you'll be commuting in the dark?">
    <link rel="icon" type="image/png" href="/favicon.png">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dark Mornings", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="jumbotron">
            <h1><a href="@Url.Action("Index", "Home")">Dark Mornings</a><i class="fa fa-sun-o"></i><i class="fa fa-moon-o"></i></h1>
            @RenderBody()
        </div>
        <footer>
            <div class="as-mentioned">
                <a href="http://www.standard.co.uk/lifestyle/london-life/10-reasons-why-we-love-our-work-commute-9133376.html" target="_blank">
                    <span>As mentioned in the</span>
                    <img title="London Evening Standard" alt="London Evening Standard" src="~/Content/evening-standard.png" />
                </a>
                <a href="http://boingboing.net/2014/12/19/dark-mornings-tool-to-help-yo.html" target="_blank">
                    <span>And also on</span>
                    <img title="Boing Boing" alt="Boing Boing" src="~/Content/boingboing.png" />
                </a>
            </div>
            <p>@Richev.Common.Web.HtmlHelpers.CopyrightNotice(2013) &bull; Made by <a href="http://richev.me">Richard</a></p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/js")
    
    @RenderSection("scripts", required: false)
    
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-46839699-1', 'auto');
        ga('send', 'pageview');

    </script>
</body>
</html>
